<?xml version="1.0" encoding="utf-8"?>
<com.shaynek.hockey.standings.StandingsEntryView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <TextView
            android:id="@+id/standings_entry_team"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Washington Capitals"/>

    <TextView
            android:id="@+id/standings_entry_wins"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/standings_entry_team"
            android:text="32"/>

    <TextView
            android:id="@+id/standings_entry_losses"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/standings_entry_wins"
            android:text="24"/>

    <TextView
            android:id="@+id/standings_entry_ot"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/standings_entry_losses"
            android:text="12"/>

    <TextView
            android:id="@+id/standings_entry_pts"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/standings_entry_ot"
            android:text="104"/>
</com.shaynek.hockey.standings.StandingsEntryView>