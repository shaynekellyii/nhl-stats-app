<?xml version="1.0" encoding="utf-8"?>
<com.shaynek.hockey.standings.StandingsHeaderView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginTop="4dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#FF000000">

    <TextView
            android:id="@+id/standings_header_division"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Metropolitan"/>

    <TextView
            android:id="@+id/standings_header_wins"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/standings_header_division"
            android:text="@string/w"/>

    <TextView
            android:id="@+id/standings_header_losses"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/standings_header_wins"
            android:text="@string/l"/>

    <TextView
            android:id="@+id/standings_header_ot"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/standings_header_losses"
            android:text="@string/ot"/>

    <TextView
            android:id="@+id/standings_header_pts"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/standings_header_ot"
            android:text="@string/pts"/>
</com.shaynek.hockey.standings.StandingsHeaderView>